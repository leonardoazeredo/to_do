<p>Tasks go here!</p>
<ul>
  <% @tasks.each do |task|  %>
    <li>
      <%= link_to(
              check_box_tag(:task, :completed, task.completed),
              "/tasks/#{task.id}/complete/#{!task.completed}"
          ) %>
      <%= link_to task.title, task_path(task) %>
    </li>
<% end %>
</ul>


